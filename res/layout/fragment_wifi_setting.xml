<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.liteon.iView.InternetFragment">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!--SSID Setting-->
        <LinearLayout
            android:id="@+id/ssid_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_timezone_title_margin_top"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/ssid_title"
                android:layout_width="@dimen/wifi_edit_text_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="SSID" 
                android:textSize="@dimen/setting_option_text_size"/>
            <EditText
                android:id="@+id/edit_ssid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_timezone_edit_text_height"
                android:layout_marginLeft="@dimen/setting_timezone_edit_text_margin_left"
                android:layout_marginRight="@dimen/setting_timezone_edit_text_margin_left"
                android:paddingLeft="@dimen/setting_timezone_edit_text_padding_left"
                android:background="@drawable/setting_lcel_1"
                android:maxLines="1"
                android:hint="SSID"
                android:textSize="@dimen/setting_option_text_size"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
        <!--BSSID Setting-->
        <LinearLayout
            android:id="@+id/bssid_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/setting_edittext_bottom_margin"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bssid_title"
                android:layout_width="@dimen/wifi_edit_text_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="BSSID" 
                android:textSize="@dimen/setting_option_text_size"/>
            <EditText
                android:id="@+id/edit_bssid"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_timezone_edit_text_height"
                android:layout_marginLeft="@dimen/setting_timezone_edit_text_margin_left"
                android:layout_marginRight="@dimen/setting_timezone_edit_text_margin_left"
                android:paddingLeft="@dimen/setting_timezone_edit_text_padding_left"
                android:background="@drawable/setting_lcel_1"
                android:maxLines="1"
                android:enabled="false"
                android:text="xx:xx:xx:xx:xx:xx"
                android:textSize="@dimen/setting_option_text_size"
                android:textColor="@color/md_grey_700"/>
        </LinearLayout>

        <!--Security Setting-->
        <TextView
            android:id="@+id/security_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Security Mode_WPA-PSK"
            android:textSize="@dimen/setting_option_text_size"/>

        <LinearLayout
            android:id="@+id/security_option"
            android:layout_width="match_parent"
            android:layout_height="@dimen/recording_option_height"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:layout_marginRight="@dimen/activity_horizontal_margin"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/setting_lcel_2"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tkip"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TKIP"
                android:textColor="@drawable/text_select_color"
                android:textSize="@dimen/setting_option_text_size"/>
            <TextView
                android:id="@+id/aes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="AES"
                android:textColor="@drawable/text_select_color"
                android:textSize="@dimen/setting_option_text_size"/>

            <TextView
                android:id="@+id/tkip_aes"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:text="TKIP &amp; AES"
                android:textColor="@drawable/text_select_color"
                android:textSize="@dimen/setting_option_text_size"/>

        </LinearLayout>

        <!--Password phase Setting-->
        <LinearLayout
            android:id="@+id/pass_phrase_sec"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/wifi_edittext_top_margin"
            android:layout_marginBottom="@dimen/bottombar_height"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/pass_phase_title"
                android:layout_width="@dimen/wifi_edit_text_width"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:text="Pass Phrase" 
                android:textSize="@dimen/setting_option_text_size"
                android:singleLine="true"/>
            <EditText
                android:id="@+id/edit_pass_phase"
                android:layout_width="match_parent"
                android:layout_height="@dimen/setting_timezone_edit_text_height"
                android:layout_marginLeft="@dimen/setting_timezone_edit_text_margin_left"
                android:layout_marginRight="@dimen/setting_timezone_edit_text_margin_left"
                android:paddingLeft="@dimen/setting_timezone_edit_text_padding_left"
                android:background="@drawable/setting_lcel_1"
                android:maxLines="1"
                android:inputType="number"
                android:textSize="@dimen/setting_option_text_size"
                android:textCursorDrawable="@null"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>