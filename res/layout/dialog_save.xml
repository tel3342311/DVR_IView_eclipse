<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="@dimen/dialog_background_width"
    android:layout_height="@dimen/dialog_background_height"
    android:background="@drawable/popup_gnd2">

    <TextView 
        android:id="@+id/status_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save it to Phone"
		android:gravity="center"
		android:layout_marginTop="@dimen/status_text_margin"
        android:layout_centerInParent="true"
        android:textColor="@color/md_white_1000"/>
    <ImageView 
        android:id="@+id/status_icon"
        android:layout_width="@dimen/dialog_icon_size"
        android:layout_height="@dimen/dialog_icon_size"
        android:background="@drawable/popup_img_ok"
        android:layout_above="@id/status_text"
        android:layout_centerInParent="true"/>
    <TextView 
        android:id="@+id/status_fail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please try again."
        android:layout_marginTop="@dimen/status_text_margin"
        android:layout_below="@id/status_text"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:visibility="invisible"
        android:textColor="@color/md_white_1000"/>
            
    <ImageView
        android:id="@+id/ok_btn"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_ok_btn_height"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="@drawable/popup_ok" />

    <TextView 
        android:layout_width="match_parent"
        android:layout_height="@dimen/dialog_ok_btn_height"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:text="OK"
        android:textColor="@color/md_white_1000"/>
</RelativeLayout>
