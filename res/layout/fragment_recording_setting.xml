<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<RelativeLayout 
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <TextView
        android:id="@+id/recording_length_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_timezone_title_margin_top"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:text="Recording Clip File Length Server"
        android:textSize="@dimen/setting_timezone_text_normal"/>

    <LinearLayout
        android:id="@+id/recording_length_option"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recording_option_height"
        android:layout_below="@id/recording_length_title"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/setting_lcel_2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/two_min"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="2Min"
            android:textColor="@drawable/text_select_color"
            android:textSize="@dimen/setting_option_text_size"/>
        <TextView
            android:id="@+id/three_min"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="3Min"
            android:textColor="@drawable/text_select_color"
            android:textSize="@dimen/setting_option_text_size"/>

        <TextView
            android:id="@+id/five_min"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="5Min"
            android:textColor="@drawable/text_select_color"
            android:textSize="@dimen/setting_option_text_size"/>

    </LinearLayout>

    <TextView
        android:id="@+id/recording_camera_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/recording_length_option"
        android:text="Recording Camera Source" 
        android:textSize="@dimen/setting_option_text_size"/>

    <LinearLayout
        android:id="@+id/recording_camera_option"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recording_option_height"
        android:layout_below="@id/recording_camera_title"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/setting_lcel_2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/front_cam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Front"
            android:textColor="@drawable/text_select_color"
            android:textSize="@dimen/setting_option_text_size"/>

        <TextView
            android:id="@+id/rear_cam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Rear"
            android:textColor="@drawable/text_select_color"
            android:textSize="@dimen/setting_option_text_size"/>

        <TextView
            android:id="@+id/front_rear_cam"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Front &amp; Rear"
            android:textColor="@drawable/text_select_color"
            android:textSize="@dimen/setting_option_text_size"/>
    </LinearLayout>
    
    <!-- For Demo -->
    <TextView
        android:id="@+id/video_out_option_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_below="@id/recording_camera_option"
        android:text="Video Out Option" 
        android:textSize="@dimen/setting_option_text_size"/>

    <LinearLayout
        android:id="@+id/video_out_option"
        android:layout_width="match_parent"
        android:layout_height="@dimen/recording_option_height"
        android:layout_below="@id/video_out_option_title"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="@dimen/activity_horizontal_margin"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:background="@drawable/setting_lcel_2"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/hdmi_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="HDMI"
            android:textColor="@drawable/text_select_color"
            android:textSize="@dimen/setting_option_text_size"/>

        <TextView
            android:id="@+id/uvc_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="UVC"
            android:textColor="@drawable/text_select_color"
            android:textSize="@dimen/setting_option_text_size"/>

        <TextView
            android:id="@+id/both_out"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Both"
            android:textColor="@drawable/text_select_color"
            android:textSize="@dimen/setting_option_text_size"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/bottombar_height"
        android:layout_below="@id/video_out_option"/>
</RelativeLayout>
</ScrollView>
