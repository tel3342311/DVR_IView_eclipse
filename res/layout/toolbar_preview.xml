<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/toolbar_height"
    android:background="@drawable/menu_tle">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textSize="24sp"
       	android:textColor="@color/md_white_1000"
        android:layout_gravity="center"
        android:id="@+id/toolbar_title" />

    <FrameLayout
        android:layout_width="@dimen/menu_icon_size"
        android:layout_height="@dimen/menu_icon_size"
        android:layout_gravity="right|center_vertical"
        android:layout_marginRight="@dimen/menu_icon_margin_right">
        <ProgressBar
            android:id="@+id/icon_loading"
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"
            android:layout_gravity="right|center_vertical"
            android:visibility="invisible"/>
        <ImageView
            android:id="@+id/icon_camera_1"
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"
            android:src="@drawable/menu_camera_1"
            android:visibility="invisible"
            android:layout_gravity="right|center_vertical"/>
        <ImageView
            android:id="@+id/icon_camera_2"
            android:layout_width="@dimen/menu_icon_size"
            android:layout_height="@dimen/menu_icon_size"
            android:src="@drawable/menu_camera_2"
            android:visibility="invisible"
            android:layout_gravity="right|center_vertical"/>
    </FrameLayout>

</FrameLayout>