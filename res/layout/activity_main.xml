<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/open_gnd"
    tools:context="com.liteon.iView.MainActivity">

   	<ProgressBar
            android:id="@+id/loading_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="@dimen/main_loading_icon_size"
            android:layout_height="@dimen/main_loading_icon_size"
            android:layout_centerInParent="true"
            android:max="100"
            android:progress="0"
            android:background="@drawable/open_img_loading"
            android:progressDrawable="@drawable/progress_bar_ring" />
	
   	<TextView
   	    android:id="@+id/version_info"
   	    android:layout_width="wrap_content"
   	    android:layout_height="wrap_content"
   	    android:layout_centerHorizontal="true"
   	    android:layout_below="@id/loading_progress"   	    
   	    android:layout_marginTop="@dimen/version_text_margin_top"
   	    android:textSize="@dimen/version_text_size"/>
</RelativeLayout>
