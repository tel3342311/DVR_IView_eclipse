<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--Server IP-->
    <LinearLayout
        android:id="@+id/server_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_timezone_title_margin_top"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/server_title"
            android:layout_width="@dimen/vpn_edit_text_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Server IP" />
        <EditText
            android:id="@+id/edit_server_ip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_timezone_edit_text_height"
            android:layout_marginLeft="@dimen/setting_timezone_edit_text_margin_left"
            android:layout_marginRight="@dimen/setting_timezone_edit_text_margin_left"
            android:paddingLeft="@dimen/setting_timezone_edit_text_padding_left"
            android:background="@drawable/setting_lcel_1"
            android:maxLines="1"
            android:hint="Server IP"/>
    </LinearLayout>
    <!--User Name Setting-->
    <LinearLayout
        android:id="@+id/username_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_edittext_bottom_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/username_title"
            android:layout_width="@dimen/vpn_edit_text_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Username" />
        <EditText
            android:id="@+id/edit_username"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_timezone_edit_text_height"
            android:layout_marginLeft="@dimen/setting_timezone_edit_text_margin_left"
            android:layout_marginRight="@dimen/setting_timezone_edit_text_margin_left"
            android:paddingLeft="@dimen/setting_timezone_edit_text_padding_left"
            android:background="@drawable/setting_lcel_1"
            android:maxLines="1"
            android:hint="Username"/>
    </LinearLayout>
    <!--Password Setting-->
    <LinearLayout
        android:id="@+id/password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_edittext_bottom_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/password_title"
            android:layout_width="@dimen/vpn_edit_text_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Password" />
        <EditText
            android:id="@+id/edit_password"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_timezone_edit_text_height"
            android:layout_marginLeft="@dimen/setting_timezone_edit_text_margin_left"
            android:layout_marginRight="@dimen/setting_timezone_edit_text_margin_left"
            android:paddingLeft="@dimen/setting_timezone_edit_text_padding_left"
            android:background="@drawable/setting_lcel_1"
            android:maxLines="1"
            android:inputType="textPassword"
            android:hint="Password"/>
    </LinearLayout>
    <!--Dial number Setting-->
    <LinearLayout
        android:id="@+id/client_ip_sec"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/setting_edittext_bottom_margin"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/client_ip_title"
            android:layout_width="@dimen/vpn_edit_text_width"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="Client IP" />
        <EditText
            android:id="@+id/edit_client_ip"
            android:layout_width="match_parent"
            android:layout_height="@dimen/setting_timezone_edit_text_height"
            android:layout_marginLeft="@dimen/setting_timezone_edit_text_margin_left"
            android:layout_marginRight="@dimen/setting_timezone_edit_text_margin_left"
            android:paddingLeft="@dimen/setting_timezone_edit_text_padding_left"
            android:background="@drawable/setting_lcel_1"
            android:maxLines="1"
            android:hint="Client IP"/>
    </LinearLayout>


</LinearLayout>
